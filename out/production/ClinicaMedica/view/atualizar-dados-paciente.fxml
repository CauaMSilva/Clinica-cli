<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fx.controller.paciente.AtualizarDadosPacienteController">

    <Label text="Atualizar Dados do Paciente">
        <font>
            <Font size="30"/>
        </font>
    </Label>

    <TextField fx:id="txtNome" promptText="Nome"/>
    <TextField fx:id="txtIdade" promptText="Idade"/>
    <ComboBox fx:id="cbPlanoSaude"/>
    <Button text="Atualizar" onAction="#onAtualizar"/>
    <Button text="Voltar" onAction="#onVoltar"/>
    <Label fx:id="lblMensagem"/>
</VBox>
