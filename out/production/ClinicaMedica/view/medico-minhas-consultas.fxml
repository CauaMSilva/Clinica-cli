<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER" prefWidth="700" prefHeight="500"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fx.controller.medico.MinhasConsultasMedicoController">

    <Label text="Minhas Consultas" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableConsultas" prefHeight="350" prefWidth="650">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="200"/>
            <TableColumn fx:id="colData" text="Data" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
        </columns>
    </TableView>

    <Button text="Voltar" onAction="#onVoltar" prefWidth="250" style="-fx-font-size: 16px;"/>

    <Label fx:id="lblMensagem" text="" style="-fx-text-fill: red;"/>
</VBox>
