<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER" prefWidth="800" prefHeight="650"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fx.controller.paciente.ListarMedicosController">

    <Label text="Médicos Disponíveis" style="-fx-font-size: 36px;"/>

    <TableView fx:id="tableMedicos" prefHeight="350" prefWidth="750">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID"/>
            <TableColumn fx:id="colNome" prefWidth="200" text="Nome"/>
            <TableColumn fx:id="colEspecialidade" prefWidth="200" text="Especialidade"/>
            <TableColumn fx:id="colPlano" prefWidth="150" text="Plano de Saúde"/>
            <TableColumn fx:id="colEstrelas" prefWidth="150" text="Estrelas"/>
        </columns>
    </TableView>

    <Button text="Voltar" onAction="#onVoltar" prefWidth="200" prefHeight="40" style="-fx-font-size: 18px;"/>
</VBox>
