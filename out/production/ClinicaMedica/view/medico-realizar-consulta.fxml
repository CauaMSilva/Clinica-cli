<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="15" alignment="CENTER" prefWidth="700" prefHeight="600"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fx.controller.medico.RealizarConsultaController">

    <Label text="Realizar Consulta" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

    <!-- Tabela com agendamentos pendentes -->
    <TableView fx:id="tableConsultas" prefHeight="250" prefWidth="650">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="200"/>
            <TableColumn fx:id="colData" text="Data" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
        </columns>
    </TableView>

    <Label fx:id="lblPaciente" text="Paciente selecionado: " style="-fx-font-size: 18px;"/>

    <TextArea fx:id="txtComentario" promptText="Digite seu comentÃ¡rio" prefHeight="150" prefWidth="500"/>

    <HBox spacing="20">
        <Button text="Finalizar Consulta" onAction="#onFinalizar" prefWidth="200" style="-fx-font-size: 16px;"/>
        <Button text="Voltar" onAction="#onVoltar" prefWidth="200" style="-fx-font-size: 16px;"/>
    </HBox>

    <Label fx:id="lblMensagem" text="" style="-fx-text-fill: red; -fx-font-size: 14px;"/>
</VBox>
